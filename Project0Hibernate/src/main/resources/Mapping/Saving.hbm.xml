<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name = "com.revature.pojos.Saving" table="SAVINGS">
		<id name = "id" column="SAVINGS_ID">
			<generator class="increment"></generator>
		</id>
		<property name= "balance" type="org.hibernate.type.DoubleType" column="BALANCE"></property>
		<many-to-one name="saving" column="USER_ID" class="com.revature.pojos.User"></many-to-one>
	</class>
</hibernate-mapping>