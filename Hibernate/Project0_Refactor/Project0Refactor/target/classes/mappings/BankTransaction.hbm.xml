<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.models.BankTransaction">
		<id name="id" column="TRANSACTION_ID">
			<generator class="increment"></generator>
		</id>
		<property name="type" type="org.hibernate.type.StringType" column="TRANSACTION_TYPE"></property>
		<property name="amount" type="org.hibernate.type.DoubleType" column="AMOUNT"></property>
		<many-to-one name="user" column="BANK_USERNAME" class="com.revature.models.BankUser"></many-to-one>
	</class>
</hibernate-mapping>