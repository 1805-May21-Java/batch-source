<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ERSProject1</display-name>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.revature.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.revature.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>pendingRequest</servlet-name>
    <servlet-class>com.revature.servlets.GetPendingRequestsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pendingRequest</servlet-name>
    <url-pattern>/pending-requests</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>resolvedRequest</servlet-name>
    <servlet-class>com.revature.servlets.GetResolvedRequestsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>resolvedRequest</servlet-name>
    <url-pattern>/resolved-requests</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>approveRequest</servlet-name>
    <servlet-class>com.revature.servlets.ApproveRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>approveRequest</servlet-name>
    <url-pattern>/approve-request</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>denyRequest</servlet-name>
    <servlet-class>com.revature.servlets.DenyRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>denyRequest</servlet-name>
    <url-pattern>/deny-request</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getCurrentUser</servlet-name>
    <servlet-class>com.revature.servlets.GetCurrentUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getCurrentUser</servlet-name>
    <url-pattern>/current-user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getEmployees</servlet-name>
    <servlet-class>com.revature.servlets.GetEmployeesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getEmployees</servlet-name>
    <url-pattern>/employees</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>submitRequest</servlet-name>
    <servlet-class>com.revature.servlets.SubmitRequestServlet</servlet-class>
    <multipart-config>
        <max-file-size>10485760</max-file-size>
        <max-request-size>20971520</max-request-size>
        <file-size-threshold>5242880</file-size-threshold>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>submitRequest</servlet-name>
    <url-pattern>/submit-request</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>com.revature.servlets.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/update-user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>createUser</servlet-name>
    <servlet-class>com.revature.servlets.CreateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>createUser</servlet-name>
    <url-pattern>/create-user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getReceipt</servlet-name>
    <servlet-class>com.revature.servlets.GetReceiptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getReceipt</servlet-name>
    <url-pattern>/get-receipt</url-pattern>
  </servlet-mapping>
</web-app>