<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.adora.object.Customer">
		<id name="customerId" type="int" column="customer_id">
			<generator class="increment"></generator>
		</id>
		<property name="customerName" column="customer_name" type="string"></property>
		<property name="password" column="customer_pass" type="string"></property>
		
		<bag name = "accounts" cascade="all" fetch="join" lazy="false">
         <key column = "customer_id"/>
         <one-to-many class="com.adora.object.Account"/>
      </bag>
		
	</class>
</hibernate-mapping>