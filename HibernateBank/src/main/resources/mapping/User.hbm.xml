<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.models.User" table="H_USER">
		<id name="userId" column="USER_ID">
			<generator class="increment"></generator>
		</id>
		<property name="username" type="org.hibernate.type.StringType"></property>
		<property name="email" type="org.hibernate.type.StringType"></property>		
		<property name="password" type="org.hibernate.type.StringType"></property>
		<bag name="linkedAccounts" table="USER_ACCOUNT">
			<key>
				<column name="USER_ID" not-null="true"></column>
			</key>
			<many-to-many entity-name="com.revature.models.Account">
				<column name="ACCOUNT_NUMBER" not-null="true"></column>
			</many-to-many>
		</bag>
	</class>
</hibernate-mapping>